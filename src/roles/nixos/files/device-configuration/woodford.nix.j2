{ config, ... }:

{
  networking = {
    networkmanager.enable = true;
    hostName = "woodford";
  };

  hardware.graphics = {
    enable = true;
    enable32Bit = true;
  };

  services.xserver.videoDrivers = [ "nvidia" ];

  hardware.nvidia.modesetting.enable = true;

  hardware.nvidia.prime = {
    sync.enable = true;

    # dedicated
    nvidiaBusId = "PCI:1:0:0";
  };

  environment.etc."NetworkManager/system-connections/simian.collingwood.nmconnection" = {
    text = ''
      [connection]
      id={{ wireless_ssid }}
      uuid=166120e1-3fd9-422e-8617-fa49a597abf5
      type=wifi
      interface-name=wlo1

      [wifi]
      mode=infrastructure
      ssid={{ wireless_ssid }}

      [wifi-security]
      auth-alg=open
      key-mgmt=wpa-psk
      psk={{ wireless_psk }}

      [ipv4]
      method=auto

      [ipv6]
      addr-gen-mode=default
      method=auto

      [proxy]
    '';
    mode = "0400";
  };
}
