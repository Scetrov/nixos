{ config, ... }:

{
  age.secrets.cloudflare_dns_zone_api_key.file = /root/secrets/cloudflare_dns_zone_api_key.age;
  age.secrets.cloudflare_email.file = /root/secrets/cloudflare_email.age;

  security.acme.acceptTerms = true;
  security.acme.defaults.email = "{{ lets_encrypt_email }}";
  security.acme.certs."scetrov.live" = {
    dnsProvider = "cloudflare";
    dnsResolver = "1.1.1.1:53";
    server = "https://acme-staging-v02.api.letsencrypt.org/directory";
    extraDomainNames = [
      "*.net.scetrov.live"
    ];
    credentialFiles = {
      "CLOUDFLARE_EMAIL_FILE" = config.age.secrets.cloudflare_email.path;
      "CLOUDFLARE_DNS_API_TOKEN_FILE" = config.age.secrets.cloudflare_dns_zone_api_key.path;
    };
    dnsPropagationCheck = true;
    # Use a fixed wait to allow Cloudflare to publish TXT records, query the
    # specified recursive resolver (with port), and increase DNS query timeout.
    extraLegoFlags = [
      "--dns.propagation-wait=5m"
      "--dns.resolvers=1.1.1.1:53"
      "--dns-timeout=120"
      "--dns.propagation-rns=true"
    ];
  };
}
